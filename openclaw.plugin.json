{
  "id": "claw-search",
  "name": "claw-search",
  "description": "Self-hosted private web search using SearXNG",
  "version": "1.2.0",
  "kind": "tool",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "baseUrl": {
        "type": "string",
        "title": "SearXNG Base URL",
        "description": "The base URL of your SearXNG instance (e.g., http://localhost:8888)",
        "default": "http://localhost:8888"
      },
      "maxResults": {
        "type": "number",
        "title": "Maximum Results",
        "description": "Maximum number of search results to return",
        "default": 10,
        "minimum": 1,
        "maximum": 100
      },
      "language": {
        "type": "string",
        "title": "Search Language",
        "description": "ISO 639-1 language code (e.g., en, zh, de)",
        "default": "en"
      },
      "safesearch": {
        "type": "number",
        "title": "Safe Search",
        "description": "Safe search level: 0=off, 1=moderate, 2=strict",
        "default": 0,
        "enum": [0, 1, 2]
      },
      "timeout": {
        "type": "number",
        "title": "Timeout",
        "description": "Request timeout in seconds",
        "default": 15,
        "minimum": 5,
        "maximum": 60
      }
    }
  },
  "uiHints": {
    "baseUrl": {
      "label": "SearXNG URL",
      "placeholder": "http://localhost:8888"
    },
    "maxResults": {
      "label": "Max Results"
    },
    "language": {
      "label": "Language",
      "placeholder": "en"
    },
    "safesearch": {
      "label": "Safe Search"
    },
    "timeout": {
      "label": "Timeout (seconds)"
    }
  }
}
